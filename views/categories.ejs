<%- include('partials/header'); %>
<%- include('partials/navbar'); %>

<!-- Banner -->
<header class="banner bg-body-tertiary">
    <div class="container pt-5 pb-5 text-center">
        <h1 class="mb-2 fw-light">Tudo sobre <em><%= category.title %></em></h1>
        <h2 class="fs-5 lead text-body-secondary">Navegue pelas conteudos e dicas mas comentados sobre <em><%= category.title %></em></h2>
    </div>
</header>

<!-- Content -->
<div class="container mt-5 mb-5">
        <main class="brl-grid-pai" style="width: 100%;">
            <% category.articles.forEach(article => { %>
                <div class="card mb-4 shadow-sm" style="overflow: hidden;">
                    <img src="<%= article.img %>" class="card-img-top img-fluid" alt="<%= article.alt %>" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h3 class="card-title fw-light fs-5"><%= article.title %></h3>
                        <p class="card-text text-truncate lead text-body-secondary"><%= article.abstract %></p>
                        <p class="text-body-tertiary">Por <em><%= article.author.nick %></em>, <em>em <%= article.createdAtFormat %></em></p>
                        <a href="/blog/<%= article.slug %>" class="btn btn-primary stretched-link">Ler mais</a>
                    </div>
                </div>
            <% }) %>
        </main>
</div>


